<div class = "container">
<% @articles.each do |article| %>
<div class="row justify-content-md-center">
    <div class="col-8 mt-4">
        <div class="card">
            <div class="card-header text-center">
                <% if article.user %>
                by <%= link_to article.user.username,user_path(article.user)  %>
                <% end %>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
                <p class="card-text"><%= truncate(article.description, length: 20) %> </p>
                <%= link_to 'View', article_path(article), class:"btn btn-info"%>
                <% if logged_in? && (article.user == current_user || current_user.admin?) %>
                <%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary" %>
                <%= link_to 'Delete', article_path(article), method: :delete, class:"btn btn-danger" %>
                <% end %>
            </div>
             <div class="card-footer text-muted text-center">
                <small>Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
              </div>
            </div>
    </div>
</div>
<% end %>

</div>
