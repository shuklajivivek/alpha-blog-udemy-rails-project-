<div class="container">
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
      <ul>
        <% @article.errors.full_messages.each do |error| %>
        <li>  <%= error %> </li>
        <% end %>
      </ul>
  <% end %>
  <div class = "row justify-contnet-center">
  <div class = "col-10">
      <%= form_with(model: @article,  local: true)  do |f| %>
        <div class = "form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class = "form-group row">
          <%= f.label :description,class: "col-2 col-form-label" %>
          <div class = "col-10">
          <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Description of Article"  %>
          </div>
        </div>
          
        <div class = "form-group row justify-contnet-center">
            <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div> 
          <% end %>
    </div>     
    </div>
</div>
<%= link_to 'Return to All Articles list', articles_path, class: "justify-contnet-center" %>
    