<h1 class="text-center mt-4">All Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class = "container">
<% @categories.each do |category| %>
<div class="row justify-content-md-center">
    <div class="col-4 mt-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
                
            </div>
             <div class="card-footer text-muted text-center">
                <small>Created <%= time_ago_in_words(category.created_at) %> ago, Edited <%= time_ago_in_words(category.updated_at) %> ago</small>
              </div>
            </div>
    </div>
</div>
<% end %>

</div>

<div class="flickr_pagination mt-4 mb-4">
    <%= will_paginate @categories, :container => false %>
</div>
