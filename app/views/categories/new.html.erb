<h1 class="text-center mt-4">Create New Category</h1>
<div class="container">
<div class = "row justify-contnet-center">
  <div class = "col-10">
      <%= render 'shared/errors', obj: @category %>   
      <%= form_with(model: @category,  local: true)  do |f| %>
        <div class = "form-group row">
        <%= f.label :name, "Category Name", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control", placeholder: "Enter category name" %>
          </div>
        </div>
      
        <div class = "form-group row justify-contnet-center">
            <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div> 
          <% end %>
    </div>
    </div>
</div>

    